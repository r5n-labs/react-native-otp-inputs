{
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "bugs": "https://github.com/dsznajder/react-native-otp-inputs/issues",
  "contributors": [
    "Micha≈Ç Kantor <kantorm96@gmail.com>"
  ],
  "description": "One-time password inputs built in pure JS for React-Native",
  "homepage": "https://github.com/dsznajder/react-native-otp-inputs",
  "license": "MIT",
  "name": "react-native-otp-inputs",
  "repository": "https://github.com/dsznajder/react-native-otp-inputs",
  "version": "2.0.1",
  "main": "lib/module/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project ./tsconfig.json",
    "typescript": "tsc --noEmit",
    "release": "release-it",
    "test": "jest -u",
    "test:ci": "jest --runInBand --coverage --verbose",
    "test:watch": "jest --watch",
    "prepare": "yarn clean && bob build"
  },
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "peerDependencies": {
    "react-native": ">= 0.57.0 < 1"
  },
  "jest": {
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-typescript": "7.3.3",
    "@react-native-community/bob": "0.4.1",
    "@types/jest": "24.0.12",
    "@types/react": "16.8.15",
    "@types/react-native": "0.57.51",
    "@types/react-test-renderer": "16.8.1",
    "husky": "2.2.0",
    "jest": "24.7.1",
    "react": "16.8.3",
    "react-native": "0.59.5",
    "react-test-renderer": "16.8.3",
    "release-it": "11.0.1",
    "rimraf": "2.6.3",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typescript"
    }
  },
  "react-native": "src/index.ts",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ]
  }
}
